	  else if( arg(2) == 'edit' && isset($form['#node']) ) {
	  	$current_voc = NULL;
	  	if( !isset($form['#node']->vocabulary) ) {
		  	$vocabulary_id = $form['#node']->field_vocabulary[0]['nid']; // there is different way to get this value
